<div class="container">
  <h1 class="mt-5 mb-4">Agregar Documental</h1>

  <%= form_with(model: @documentary, url: documentary_path, class: 'needs-validation', novalidate: true) do |form| %>
    <div class="form-group mb-4">
      <%= form.label :title, 'Titulo' %>
      <%= form.text_field :title, class: 'form-control', required: true %>
      <div class="invalid-feedback">
        Titulo es requerido.
      </div>
    </div>

    <div class="form-group mb-4">
      <%= form.label :duration, 'Duración' %>
      <%= form.text_area :duration, class: 'form-control', rows: 5, required: true %>
      <div class="invalid-feedback">
        Duration es requerida.
      </div>
    </div>

    <div class="form-group mb-4">
      <%= form.label :description, 'Descripción' %>
      <%= form.text_field :description, class: 'form-control', required: true %>
      <div class="invalid-feedback">
      Descripción es requerido.
      </div>
    </div>

    <div class="form-group mb-4">
      <%= form.submit 'Guardar', class: 'btn btn-primary' %>
      <%= link_to 'Volver', documentary_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
