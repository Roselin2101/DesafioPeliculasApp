<div class="container">
<h1 class="mt-4 mb-3">Bienvenido al buscador de películas</h1>

<h2 class="mt-4 mb-3" >Películas</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Título</th>
      <th>Duración</th>
      <th>Descripción</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @documentary_films.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.duration %></td>
        <td><%= document.description %></td>
        <td><%= link_to 'Editar', edit_documentary_films_path(documentary_films), class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Eliminar', documentary_films, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-primary btn-sm'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Nuevo Documental',  new_documentary_film_path, class: 'btn btn-primary btn-sm'%>

</div>